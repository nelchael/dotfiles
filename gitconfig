; vim: set ft=gitconfig

[user]
	email = krzysiek.pawlik@people.pl
	name = Krzysztof Pawlik
[push]
	default = simple
[color]
	diff = auto
	status = auto
[diff]
	mnemonicprefix = yes
	renames = true
[log]
	decorate = auto
[rebase]
	stat = true
	autoStash = true
[status]
	short = false
	branch = true
	showUntrackedFiles = normal
[fetch]
	prune = true
	recurseSubmodules = on-demand
[submodule]
	recurse = true
[gc]
	auto = 1536
	autoPackLimit = 32
	autoDetach = false
[stash]
	showPatch = true
[alias]
	st = status --short
	co = checkout
	ci = commit
	branches = branch --list -v
	outgoing = log --branches --not --remotes=origin --oneline
	purge-branches = !git branch -vv | awk '/\\[origin\\/.*: gone]/ {if ($4 == \"gone]\") {print $1}}' | xargs -r git branch -v -D
	tags = !git tag --list | sort --version-sort
	sync-all = !sync-all.sh
[include]
	path = ~/.gitconfig-site
