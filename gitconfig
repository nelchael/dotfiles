; vim: set ft=gitconfig

[user]
    email = krzysiek.pawlik@people.pl
    name = Krzysztof Pawlik
[core]
    abbrev = 8
[push]
    default = simple
[pull]
    rebase = true
[color]
    diff = auto
    status = auto
[diff]
    mnemonicprefix = yes
    renames = true
[log]
    decorate = auto
[rebase]
    stat = true
    autoStash = true
[status]
    short = false
    branch = true
    showUntrackedFiles = normal
[fetch]
    prune = true
    recurseSubmodules = on-demand
[submodule]
    recurse = true
[gc]
    auto = 1536
    autoPackLimit = 32
    autoDetach = false
[stash]
    showPatch = true
[init]
    defaultBranch = main
[alias]
    st = status --short
    co = checkout
    ci = commit
    branches = branch --list -v
    outgoing = log --branches --not --remotes=origin --oneline
    purge-branches = !git branch --no-color --no-column --merged "$(git symbolic-ref refs/remotes/origin/HEAD --short | sed 's,origin/,,')" --no-contains origin/HEAD --no-contains "$(git branch --show-current)" | xargs -r git branch -v --delete
    tags = !git tag --list | sort --version-sort
    show-branches = show-branch --current heads/*
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[include]
    path = ~/.gitconfig-site
