; vim: set ft=gitconfig

[user]
	email = krzysiek.pawlik@people.pl
	name = Krzysztof Pawlik
[push]
	default = simple
[color]
	diff = auto
	status = auto
[diff]
	mnemonicprefix = yes
	renames = true
[log]
	decorate = auto
[rebase]
	stat = true
	autoStash = true
[status]
	short = true
	branch = true
	showUntrackedFiles = all
[fetch]
	prune = true
[alias]
	st = status
	co = checkout
	ci = commit
	branches = branch --list -v
	outgoing = log --branches --not --remotes=origin --oneline
	purge-branches = !git branch -vv | awk '/\\[origin\\/.*: gone]/ {if ($4 == \"gone]\") {print $1}}' | xargs -r git branch -v -d
[include]
	path = ~/.gitconfig-site
